{
  "compilerOptions": {
    "outDir": "./lib",
    "allowJs": true,
    "target": "es6",
    "rootDir": "src",
    "skipLibCheck": true,
    "moduleResolution": "node",
    // "noEmitOnError": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
